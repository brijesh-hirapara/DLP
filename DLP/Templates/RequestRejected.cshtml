@model DLP.Application.Common.Templates.Models.RequestRejectedViewModel;
@using DLP.HtmlHelpers;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Request Rejected</title>
</head>
<body>
    <div style="max-width: 600px; margin: 0 auto; padding: 20px; font-family: Arial, sans-serif;">
        <p>@await Html.Translate("request-rejected:entry.text", "Dear", Model.UserLang) @Model.ContactName,</p>
        <br />
        <p>
            @await Html.Translate("request-rejected:sub-title",
            "We regret to inform you that your request for", Model.UserLang) <strong>@Model.RequestType</strong> @await Html.Translate("request-rejected:has-been-rejected",
            "has been reviewed and rejected.", Model.UserLang)
        </p>

        @if (!string.IsNullOrWhiteSpace(Model.Reasons))
        {
            <br />
            <p>
                @await Html.Translate("request-rejected:reasons",
            "Reasons/Comments:", Model.UserLang)
                <br />
                @Model.Reasons
            </p>
        }

        <br />
        <p>
            @await Html.Translate("request-rejected:next-steps",
            "Please get in touch with our support team if you need further clarification or wish to provide additional information.", Model.UserLang)
        </p>
        <br />
        <p>
            @await Html.Translate("request-rejected:thank",
            "Thank you for your understanding.", Model.UserLang)
        </p>
        <p>
            @await Html.Translate("request-rejected:regards",
            "Regards,", Model.UserLang)
        </p>
    </div>
</body>
</html>
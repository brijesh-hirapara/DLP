@model DLP.Application.Common.Templates.Models.NewRequestAddedViewModel;
@using DLP.HtmlHelpers;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>New Vehicle Fleet Request Received</title>
</head>
<body>
    <div style="max-width: 600px; margin: 0 auto; padding: 20px; font-family: Arial, sans-serif;">
        <h2>@await Html.Translate("new-request-added-vehicle-fleet:title", "New Vehicle Fleet Request Ready for Review")</h2>
        <p>@await Html.Translate("new-request-added:entry.text", "Dear Team"),</p>
        <p>
            @await Html.Translate("new-request-added-vehicle-fleet:sub-title",
            "A new request has been submitted and is ready for your review.")
        </p>
        <p>
            @await Html.Translate("new-request-added-vehicle-fleet:info",
            "Please click the link below to view and process the request:")
        </p>
        <a href="@Model.RequestDetailsSiteUrl">@await Html.Translate("new-request-added-vehicle-fleet:info", "View Request")</a>
        <p>
            @await Html.Translate("new-request-added-vehicle-fleet:thank",
            "We appreciate your prompt attention to this matter.")
        </p>
        <p>
            @await Html.Translate("new-request-added:regards",
            "Regards,")
            <br>@await Html.Translate("new-request-added-vehicle-fleet:automated-notification-system",
            "Automated Notification System")
        </p>
    </div>
</body>
</html>
